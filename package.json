{
  "name": "morpheus",
  "version": "1.0.0",
  "description": "A Headless CMS that adapts to any framework",
  "type": "module",
  "keywords": [
    "headless cms",
    "postgres",
    "graphql",
    "rest api"
  ],
  "author": {
    "name": "haz3",
    "url": "https://www.linkedin.com/in/andreaemmanuele/"
  },
  "license": "ISC",
  "scripts": {
    "api": "pnpm --filter api",
    "cli": "pnpm --filter cli",
    "postinstall": "npx simple-git-hooks && pnpm sync-env",
    "type-check": "tsc --noEmit",
    "prettier": "node --experimental-strip-types node_modules/prettier/bin/prettier.cjs . --write",
    "sync-env": "./scripts/sync-env.bash"
  },
  "lint-staged": {
    "**/*.{ts,mjs,json}": "pnpm prettier",
    "**/*.{ts,mjs}": "eslint --fix"
  },
  "simple-git-hooks": {
    "commit-msg": "commitlint --edit $1",
    "pre-commit": "npx lint-staged && pnpm type-check"
  },
  "packageManager": "pnpm@10.6.1",
  "devDependencies": {
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@eslint/js": "^9.24.0",
    "@types/node": "^22.14.1",
    "@types/pg": "^8.11.12",
    "eslint": "^9.24.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-prettier": "^5.2.6",
    "globals": "^16.0.0",
    "lint-staged": "^15.5.1",
    "prettier": "^3.5.3",
    "prettier-plugin-organize-imports": "^4.1.0",
    "simple-git-hooks": "^2.12.1",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.29.1",
    "zod": "^3.24.2"
  },
  "engines": {
    "node": ">=22.14.0"
  },
  "dependencies": {
    "bcryptjs": "^3.0.2"
  }
}
