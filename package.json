{
  "name": "morpheus",
  "version": "1.0.0",
  "description": "A Headless CMS that adapts to any framework",
  "main": "index.ts",
  "scripts": {
    "postinstall": "npx simple-git-hooks",
    "prettier": "node --experimental-strip-types node_modules/prettier/bin/prettier.cjs . --write"
  },
  "lint-staged": {
    "*.{ts,mjs,json}": "pnpm prettier"
  },
  "simple-git-hooks": {
    "commit-msg": "commitlint --edit $1",
    "pre-commit": "npx lint-staged && tsc --noEmit"
  },
  "keywords": [
    "headless cms",
    "postgres",
    "graphql",
    "rest api"
  ],
  "author": "haz3",
  "license": "ISC",
  "packageManager": "pnpm@10.6.1",
  "devDependencies": {
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@types/node": "^22.14.1",
    "lint-staged": "^15.5.1",
    "prettier": "^3.5.3",
    "prettier-plugin-organize-imports": "^4.1.0",
    "simple-git-hooks": "^2.12.1",
    "typescript": "^5.8.3"
  }
}
